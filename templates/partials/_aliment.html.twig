<div class="col-12 col-md-6 col-lg-4 col-xl 3">
    <div class="card border-primary mb-3 mx-auto" style="max-width: 20rem;">
        <div class="card-header text-center"><img src="{{ asset('build/images/' ~ aliment.image ) }}" alt="{{aliment.name}}" class="card-img-top perso_imgAliment"></div>
        <div class="card-body">
        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{aliment.name}}</h3>
        <p class="card-text">
            <h4 class="text-center">Prix (kilo) : {{aliment.price}}</h4>
            <h3 class="text-center">Type : {{aliment.type.name}}</h3>
            <table class="table text-center">
                <tr class="table-primary">
                    <td>Propriété</td>
                    <td>Valeur (100g)</td>
                </tr>
                <tr>
                    <td>Calories</td>
                    <td>{{aliment.calory}}</td>
                </tr>
                <tr>
                    <td>Protéines</td>
                    <td>{{aliment.proteine}}</td>
                </tr>
                <tr>
                    <td>Glucides</td>
                    <td>{{aliment.glucide}}</td>
                </tr>
                <tr>
                    <td>Lipide</td>
                    <td>{{aliment.lipide}}</td>
                </tr>
            </table>
        </p>
        </div>
    </div>
</div>       